{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@eddie/config": ["packages/config/dist/index"],
      "@eddie/config/*": ["packages/config/dist/*"],
      "@eddie/context": ["packages/context/dist/index"],
      "@eddie/context/*": ["packages/context/dist/*"],
      "@eddie/engine": ["packages/engine/dist/index"],
      "@eddie/engine/*": ["packages/engine/dist/*"],
      "@eddie/hooks": ["packages/hooks/dist/index"],
      "@eddie/hooks/*": ["packages/hooks/dist/*"],
      "@eddie/io": ["packages/io/dist/index"],
      "@eddie/io/*": ["packages/io/dist/*"],
      "@eddie/mcp": ["packages/mcp/dist/index"],
      "@eddie/mcp/*": ["packages/mcp/dist/*"],
      "@eddie/providers": ["packages/providers/dist/index"],
      "@eddie/providers/*": ["packages/providers/dist/*"],
      "@eddie/templates": ["packages/templates/dist/index"],
      "@eddie/templates/*": ["packages/templates/dist/*"],
      "@eddie/tokenizers": ["packages/tokenizers/dist/index"],
      "@eddie/tokenizers/*": ["packages/tokenizers/dist/*"],
      "@eddie/tools": ["packages/tools/dist/index"],
      "@eddie/tools/*": ["packages/tools/dist/*"],
      "@eddie/types": ["packages/types/dist/index"],
      "@eddie/types/*": ["packages/types/dist/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/templates" },
    { "path": "./packages/config" },
    { "path": "./packages/io" },
    { "path": "./packages/tools" },
    { "path": "./packages/tokenizers" },
    { "path": "./packages/providers" },
    { "path": "./packages/hooks" },
    { "path": "./packages/context" },
    { "path": "./packages/mcp" },
    { "path": "./packages/engine" },
    { "path": "./apps/cli" },
    { "path": "./apps/api" }
  ]
}
