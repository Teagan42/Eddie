{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/auth": ["auth"],
      "@/auth/*": ["auth/*"],
      "@/api": ["api"],
      "@/api/*": ["api/*"],
      "@/chat": ["pages/chat"],
      "@/chat/*": ["pages/chat/*"],
      "@/config": ["config"],
      "@/config/*": ["config/*"],
      "@/hooks": ["hooks"],
      "@/hooks/*": ["hooks/*"],
      "@/styles": ["styles"],
      "@/styles/*": ["styles/*"],
      "@/theme": ["theme"],
      "@/theme/*": ["theme/*"],
      "@/vendor": ["vendor"],
      "@/vendor/*": ["vendor/*"],
      "@/*": ["./*"],
      "@shikijs/transformers": ["vendor/shiki-transformers.ts"]
    },
    "types": [
      "vite/client",
      "vitest"
    ],
    "noEmit": true
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../platform/ui"
    }
  ]
}
