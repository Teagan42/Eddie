{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "vitest",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shikijs/transformers": [
        "vendor/shiki-transformers.ts"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [
    {
      "path": "../../platform/ui"
    },
    {
      "path": "../../platform/integrations/api-client"
    }
  ]
}