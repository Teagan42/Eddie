{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "test",
    "src/__tests__",
    "src/__tests__/**/*",
    "src/**/*.stories.tsx",
    "**/*.spec.ts"
  ]
}
