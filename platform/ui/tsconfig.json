{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "vitest"
    ],
    "paths": {
      "@/vendor/*": [
        "vendor/*"
      ],
      "@/config": [
        "config/env.ts"
      ],
      "@/auth/*": [
        "auth/*"
      ],
      "@/api/*": [
        "api/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@eddie/api-client": [
        "../integrations/api-client/src/*"
      ],
      "@eddie/api-client/*": [
        "../integrations/api-client/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ]
}