    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "test",
    "bench",
    "**/*.test.ts",
    "**/*.bench.ts"
