{
  "id": "simple-completion",
  "label": "Simple completion",
  "description": "Short assistant completion without tool calls.",
  "options": {
    "model": "gpt-4o-mini",
    "messages": [
      {
        "role": "user",
        "content": "Say hello in one sentence."
      }
    ]
  },
  "provider": {
    "events": [
      {
        "type": "response.created",
        "response": {
          "id": "resp_simple"
        }
      },
      {
        "type": "response.output_text.delta",
        "delta": "Hello there!"
      },
      {
        "type": "response.completed",
        "response": {
          "id": "resp_simple",
          "status": "completed",
          "usage": {
            "input_tokens": 12,
            "output_tokens": 4,
            "total_tokens": 16
          }
        }
      }
    ],
    "finalResponse": {
      "id": "resp_simple",
      "status": "completed",
      "usage": {
        "input_tokens": 12,
        "output_tokens": 4,
        "total_tokens": 16
      },
      "output": [
        {
          "id": "out_text",
          "type": "output_text",
          "content": [
            {
              "type": "output_text",
              "text": "Hello there!"
            }
          ]
        }
      ]
    }
  },
  "expectations": {
    "streamEvents": [
      {
        "type": "delta",
        "text": "Hello there!"
      },
      {
        "type": "end",
        "reason": "completed",
        "usage": {
          "input_tokens": 12,
          "output_tokens": 4,
          "total_tokens": 16
        },
        "responseId": "resp_simple"
      }
    ]
  }
}
