{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "test",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../../core/config"
    },
    {
      "path": "../../core/types"
    },
    {
      "path": "../../runtime/io"
    }
  ]
}
