<% const run = it.run || {}; %>
<% const swimlane = it.swimlane; %>
<% if (run.goal || run.step || swimlane) { %>
## Run state
<% if (run.goal) { %>
- **Goal:** <%= run.goal %>
<% } %>
<% if (run.step) { %>
- **Current step:** <%= run.step %>
<% } %>
<% if (swimlane) { %>
- **Swimlane:** <%= swimlane %>
<% } %>
<% if (Array.isArray(run.constraints) && run.constraints.length) { %>
- **Constraints:**
<% run.constraints.forEach((constraint) => { %>
  - <%= constraint %>
<% }) %>
<% } %>
<% } %>
